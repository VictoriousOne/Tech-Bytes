<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>

  <div class="card">
    <div class="card-header">
      <h3>
        Edit Post
      </h3>
    </div>
    <div class="card-body">
      <form class="edit-post-form">
        <div>
          <label for="post-title">Title</label>
          <input name="post-title" type="text" value="{{post.title}}" />
          <!-- <span>({{post.description}})</span> -->
          <label for="post-description">Content</label>
          <input name="post-description" type="text" value="{{post.description}}" />
        </div>
        <!-- <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div> -->
        <div>
        <button type="submit" class="block">Save post</button>
        </div>
        <div>
        <button type="button" class="delete-post-btn block">Delete post</button>
        </div>
      </form>
    </div>
  </div>
</article>

