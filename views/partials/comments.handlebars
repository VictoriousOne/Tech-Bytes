<div class="card">
  <h5 class="card-header">Comments</h5>
  <div class="card-body">
    <div class="comments">
      {{#each this}}
      <section class="comment">
        <div class="meta">
          Created by {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
          {{comment_text}}
          <br>
          <br>
          <a href="/comment/{{id}}" class="edit-link">Edit comment</a>
        </div>
      </section>
      {{/each}}
    </div>
  </div>
</div>